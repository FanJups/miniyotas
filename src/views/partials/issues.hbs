<div class="container mt-5" style="margin-bottom: 25px">
    <div class="d-flex justify-content-center mt-5 mb-5">
        <div class="container">
            <div class="row g-3">
                {{#each items}}
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title"><a href="{{this.issues}}" target="_blank"
                                                          class="text-decoration-none">
                                    {{this.title}}
                                </a></h5>
                                <p class="card-text fw-light" style="font-size: 0.9em !important;">
                                    {{#each this.labels}}
                                        <span class="badge bg-dark">{{this}}</span>
                                    {{/each}}
                                </p>
                                <p class="d-flex justify-content-end">
                                    <a href="https://github.com/{{this.author}}" class="text-decoration-none" target="_blank">By {{this.author}}</a>
                                </p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{#if  (isLower 0 pages)}}
    {{>pagination}}
{{/if}}
